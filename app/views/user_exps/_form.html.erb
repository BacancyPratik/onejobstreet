<%= form_for @user_exp do |f| %>

<div class="form-group">
  <%= f.label("Current Designation:") %>
  <%= f.text_field :designation,class:"form-control" %>
<div>

<div class="form-group">
  <%= f.label("Current Company:") %>
  <%= f.text_field :company,class:"form-control" %>
<div>

<div class="form-group">
</br>
  <%= f.label("Experience:") %>
  Years:<%= f.select :working_since,0..30 %>

  <%= f.label("Months:") %>
  <%= f.select :months,0..11 %>
<div>
</br>
<div class="form-group">
  <%= f.label("Current Location:") %>
  <%= f.collection_select(:location, Location.all,:name,:name) %>
<div>
</br>
<div class="form-group">
  <%= f.label("Duration of notice period:") %>
  <%= f.select :notice ,options_for_select([["15 days or less","15 days or less"],["1 month","1 month"],["2 months","2 months"],["3 months","3 months"],["More than 3 months","More than 3 months"]]) %><br><br><br>
<div>

<div class="form-group">
  <%= f.label("Skills : ") %>
  <%= f.text_field :skills,class:"form-control" %>
<div>

<div class="form-group">
   <%= f.submit "confirm" %>
<div>
<% end %>
